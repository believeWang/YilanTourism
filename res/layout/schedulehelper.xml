<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:background="@drawable/frame" >

    <Button
        android:id="@+id/Button01_helper"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/button1_helper"
        android:layout_alignBottom="@+id/button1_helper"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="30dp"
        android:text="取消" />

    <EditText
        android:id="@+id/EditText1_helper"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/Button01_helper"
        android:layout_alignTop="@+id/textView1"
        android:layout_toLeftOf="@+id/TextView03"
        android:ems="10"
        android:inputType="time"
        android:text="" >

        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/TextView03"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="23dp"
        android:text="編輯頁面"
        android:textColor="@color/indigo" />

    <EditText
        android:id="@+id/editText2_helper"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/EditText1_helper"
        android:layout_alignRight="@+id/EditText1_helper"
        android:layout_below="@+id/EditText1_helper"
        android:ems="10"
        android:inputType="numberSigned"
        android:text="" />

    <EditText
        android:id="@+id/editText3_helper"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/editText2_helper"
        android:layout_alignRight="@+id/editText2_helper"
        android:layout_below="@+id/editText2_helper"
        android:ems="10"
        android:text="" />

    <TextView
        android:id="@+id/TextView01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/textView1"
        android:layout_alignTop="@+id/editText2_helper"
        android:text="預算"
        android:textColor="@color/darkred" />

    <TextView
        android:id="@+id/TextView02"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/TextView01"
        android:layout_below="@+id/editText2_helper"
        android:text="地點"
        android:textColor="@color/darkred" />

    <Button
        android:id="@+id/button1_helper"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/TextView02"
        android:layout_below="@+id/editText3_helper"
        android:text="確定" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/TextView03"
        android:layout_toRightOf="@+id/TextView03"
        android:text="時間"
        android:textColor="@color/darkred" />

</RelativeLayout>
