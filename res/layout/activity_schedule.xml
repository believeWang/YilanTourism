<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/background_sch"
    tools:context=".ScheduleActivity" >

    <Button
        android:id="@+id/button_actsch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:text="加入行程" />

   
   <com.tku.yilantourism.DragListView
		android:id="@+id/listView1"
		android:layout_width="match_parent"
      android:layout_height="wrap_content"
		android:cacheColorHint="@color/touming_color"
		android:listSelector="@drawable/listview_item_bk"
	
		android:layout_below="@+id/button_actsch"
        android:layout_centerHorizontal="true" 
		/>

    <Button
        android:id="@+id/button1_actsch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/button_actsch"
        android:layout_alignParentLeft="true"
        android:text="清空行程" />

</RelativeLayout>
